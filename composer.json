{
    "name": "flowconcept/drupal-project",
    "description": "Skeleton for Drupal 8 projects",
    "type": "project",
    "keywords": [
        "Drupal"
    ],
    "homepage": "https://github.com/flowconcept/drupal-project",
    "license": "GPL-2.0+",
    "repositories": [
        {
            "type": "composer",
            "url": "https://packagist.drupal-composer.org"
        }
    ],
    "require": {
        "composer/installers": "^1.0",
        "cweagans/composer-patches": "^1.0",
        "wikimedia/composer-merge-plugin": "^1.3",
        "drush/drush": "8.0.*",
        "drupal/core": "8.0.*",
        "drupal/config_update": "8.1.*",
        "drupal/devel": "8.1.x-dev",
        "drupal/features": "8.3.*",
        "drupal/token": "8.1.*",
        "drupal/pathauto": "8.1.*",
        "drupal/adminimal_theme": "8.1.*",
        "drupal/bootstrap": "8.3.*",
        "drupal/admin_toolbar": "8.1.*",
        "drupal/twig_tweak": "8.1.*",
        "drupal/image_url_formatter": "8.1.*"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "scripts": {
        "post-install-cmd": "scripts/composer/post-install.sh"
    },
    "extra": {
        "installer-paths": {
            "htdocs/core": ["type:drupal-core"],
            "htdocs/modules/contrib/{$name}": ["type:drupal-module"],
            "htdocs/profiles/contrib/{$name}": ["type:drupal-profile"],
            "htdocs/themes/contrib/{$name}": ["type:drupal-theme"],
            "htdocs/drush/commands/{$name}": ["type:drupal-drush"]
        },
        "merge-plugin": {
            "include": [
                "htdocs/modules/contrib/*/composer.json",
                "htdocs/modules/custom/*/composer.json"
            ],
            "recurse": false,
            "replace": false,
            "merge-extra": false
        },
        "patches": {
            "drupal/bootstrap": {
                "#2697503": "https://www.drupal.org/files/issues/check-for-icon-2697503.patch"
            },
            "drupal/core": {
                "#1170362": "https://www.drupal.org/files/issues/minimal-install-profile-1170362-204.patch",
                "#2655104": "https://www.drupal.org/files/issues/missing-dependencies-2655104.patch",
                "#2572355": "https://www.drupal.org/files/issues/2572355-31-page-count-token.patch",
                "#2575771": "https://www.drupal.org/files/issues/do_not_overwrite-2575771-2.patch"
            },
            "drupal/features": {
                "#2653046": "https://www.drupal.org/files/issues/2653046-8.patch"
            },
            "drupal/adminimal_theme": {
                "#2680689": "https://www.drupal.org/files/issues/adminimal_theme-fix-styles-for-admin-toolbar-2680689-2.patch"
            }
        }
    }
}
