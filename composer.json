{
    "name": "smk/drupal-project",
    "description": "Project template for Drupal 8 projects with composer",
    "type": "project",
    "license": "MIT",
    "authors": [
        {
            "name": "",
            "role": ""
        }
    ],
    "support": {},
    "repositories": [
        {
            "type": "composer",
            "url": "https://packagist.drupal-composer.org"
        }
    ],
    "replace": {
      "drupal/action": "8.*",
      "drupal/aggregator": "8.*",
      "drupal/ban": "8.*",
      "drupal/basic_auth": "8.*",
      "drupal/block": "8.*",
      "drupal/block_content": "8.*",
      "drupal/book": "8.*",
      "drupal/breakpoint": "8.*",
      "drupal/ckeditor": "8.*",
      "drupal/color": "8.*",
      "drupal/comment": "8.*",
      "drupal/config": "8.*",
      "drupal/config_translation": "8.*",
      "drupal/contact": "8.*",
      "drupal/content_translation": "8.*",
      "drupal/contextual": "8.*",
      "drupal/datetime": "8.*",
      "drupal/dblog": "8.*",
      "drupal/editor": "8.*",
      "drupal/entity_reference": "8.*",
      "drupal/field": "8.*",
      "drupal/field_ui": "8.*",
      "drupal/file": "8.*",
      "drupal/filter": "8.*",
      "drupal/forum": "8.*",
      "drupal/hal": "8.*",
      "drupal/help": "8.*",
      "drupal/history": "8.*",
      "drupal/image": "8.*",
      "drupal/language": "8.*",
      "drupal/link": "8.*",
      "drupal/locale": "8.*",
      "drupal/menu_link_content": "8.*",
      "drupal/menu_ui": "8.*",
      "drupal/migrate": "8.*",
      "drupal/migrate_drupal": "8.*",
      "drupal/node": "8.*",
      "drupal/options": "8.*",
      "drupal/path": "8.*",
      "drupal/quickedit": "8.*",
      "drupal/rdf": "8.*",
      "drupal/responsive_image": "8.*",
      "drupal/rest": "8.*",
      "drupal/search": "8.*",
      "drupal/serialization": "8.*",
      "drupal/shortcut": "8.*",
      "drupal/statistics": "8.*",
      "drupal/syslog": "8.*",
      "drupal/system": "8.*",
      "drupal/taxonomy": "8.*",
      "drupal/telephone": "8.*",
      "drupal/text": "8.*",
      "drupal/toolbar": "8.*",
      "drupal/tour": "8.*",
      "drupal/tracker": "8.*",
      "drupal/update": "8.*",
      "drupal/user": "8.*",
      "drupal/views": "8.*",
      "drupal/views_ui": "8.*",
      "drupal/minimal": "8.*",
      "drupal/standard": "8.*",
      "drupal/bartik": "8.*",
      "drupal/classy": "8.*",
      "drupal/phptemplate": "8.*",
      "drupal/twig": "8.*",
      "drupal/seven": "8.*",
      "drupal/stark": "8.*"
    },
    "require": {
        "composer/installers": "~1",
        "drupal/core": "8.0.x-dev",
        "drush/drush": "7.0.0-rc2",

        "drupal/devel": "8.1.*@dev",
        "drupal/token": "8.1.*@dev"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "scripts": {
        "post-install-cmd": "scripts/composer/post-install.sh"
    },
    "extra": {
        "installer-paths": {
            "htdocs/core": ["type:drupal-core"],
            "htdocs/modules/contrib/{$name}": ["type:drupal-module"],
            "htdocs/profiles/contrib/{$name}": ["type:drupal-profile"],
            "htdocs/themes/contrib/{$name}": ["type:drupal-theme"],
            "htdocs/drush/commands/{$name}": ["type:drupal-drush"]
        }
    }
}
